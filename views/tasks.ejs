<%- include('partials/loginheader') %>

<main>
    <div id="tasks">
        <p class="text-center h2">Tasks</p>
        <a href="/add-task" class="btn btn-outline-success">Add New Task</a>
    </div>
        <div class="table px-5 mt-4">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                  <tr class="text-center">
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Due Date</th>
                    <th scope="col">Status</th>
                    <th scope="col"><i class="fa-regular fa-pen-to-square"></i></th>
                  </tr>
                </thead>
                <tbody>
                    <% tasks.forEach((task, index) => { %>
                        <tr class="text-center">
                            <th scope="row"><%= index + 1 %></th>
                            <td><b class="h4"><%= task.title %></b></td>
                            <td><%= task.description %></td>
                            <td><%= task.due_date %></td>
                            <td><span class="badge bg-success"><%= task.status %></span></td>
                            <td>
                                <form action="/remove-task" method="POST" id="removeForm">
                                    <input type="hidden" name="taskId" value="<%= task.id %>">
                                    <button class="btn btn-danger btn-block" type="submit">Remove Task</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
</main>

<%- include('partials/footer') %>
