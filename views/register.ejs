<%- include('partials/header') %>

<main class="form-signin w-100 m-auto loginForm">
    <form action="/register" method="POST" class="card text-center">
        <p class="h1 mb-3 font-weight-normal"><i class="fa-sharp fa-regular fa-address-card"></i></p>
        <div class="form-group">
            <label for="username" class="sr-only">Email address</label>
            <input type="email" id="username" name="username" class="form-control" placeholder="Email address" required="" autofocus="">
        </div>
        <div class="form-group">
            <label for="password" class="sr-only">Password</label>
            <input type="password" name="password" id="password" class="form-control" placeholder="Password" required="">
        </div>
        <button type="submit" class="btn btn-outline-secondary">Register</button>

        <p class="h6 mb-0 mt-2">Already a user? <a href="/login" role="button">Log in here</a> </p>
    </form>
</main>

  <%- include('partials/footer') %>